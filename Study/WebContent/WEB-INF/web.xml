<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

<servlet>
		<servlet-name>MemberListServlet</servlet-name>
		<servlet-class>controller.MemberListServlet</servlet-class>
		<init-param>
			<param-name>sqlSessionFactory</param-name>
			<param-value>datasource.OracleMybatisSqlSessionFactory</param-value>
		</init-param>
		<init-param>
			<param-name>memberDAO</param-name>
			<param-value>dao.MemberDAOImpl</param-value>
		</init-param>
		<init-param>
			<param-name>memberService</param-name>
			<param-value>service.MemberServiceImpl</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberListServlet</servlet-name>
		<url-pattern>/grid</url-pattern>
	</servlet-mapping>
	
</web-app>